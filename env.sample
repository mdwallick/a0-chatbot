# Web client with token vault enabled
AUTH0_DOMAIN="{TENANT}.us.auth0.com"
AUTH0_CLIENT_ID=""
AUTH0_CLIENT_SECRET=""
# Generate a random secret: `openssl rand -base64 32`
AUTH0_SECRET=""
APP_BASE_URL=http://localhost:3000

# M2M client for Auth0 management API calls
# requires the following scopes: read:users, update:users, delete:users
AUTH0_CLIENT_ID_MGMT=""
AUTH0_CLIENT_SECRET_MGMT=""
AUTH0_ISSUER_BASE_URL=https://{TENANT}.us.auth0.com

# OpenAI configuration (direct API access)
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4o-mini"

# liteLLM configuration (optional, if using liteLLM proxy)
# LITELLM_API_KEY=""
# LITELLM_BASE_URL="https://your-litellm-instance.com"

# if you want to enable Salesforce, make sure you get a developer edition tenant
SALESFORCE_LOGIN_URL="https://{TENANT}.develop.my.salesforce.com"

# this demo requires a local Postgresql DB
DATABASE_URL="postgresql://{USER}@localhost:5432/chatbot?schema=public&sslmode=disable"

# Connections map required for linked accounts => Google, Windows Live, custom OIDC, etc.
ENABLED_CONNECTIONS='{"google-oauth2":"con_xxxxxx","oidc":"con_xxxxxx","windowslive":"con_xxxxxx"}'

# for web search you need to set up Google Custom search API
# https://developers.google.com/custom-search/v1/overview
GOOGLE_CX=""
GOOGLE_SEARCH_API_KEY=""

# for image generation limits
IMAGES_PER_DAY_LIMIT=3

# Commerce/Checkout tools - merchant credentials for UCP protocol
# MERCHANT_DOMAIN="{TENANT}.us.auth0.com"
# MERCHANT_CLIENT_ID=""
# MERCHANT_CLIENT_SECRET=""
# MERCHANT_AUDIENCE=""
# MERCHANT_SCOPE=""

