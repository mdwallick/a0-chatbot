generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ChatThread {
  id        String    @id @default(cuid())
  userId    String
  summary   String    @default("New conversation")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]
}

model Message {
  id        String     @id @default(cuid())
  content   String     // Plain text fallback for queries and backwards compatibility
  parts     Json?      // Full UIMessage parts array (tool calls, reasoning, etc.)
  role      String
  threadId  String
  createdAt DateTime   @default(now())
  thread    ChatThread @relation(fields: [threadId], references: [id], onDelete: Cascade)
}

model XboxCredential {
  userId    String      @id
  userHash  String
  xuid      String
  xstsToken String
  issuedAt  DateTime
  expiresOn DateTime
}

model GrantedScope {
  id            String    @id @default(cuid())
  userId        String
  connectionId  String
  scope         String
  grantedAt     DateTime  @default(now())

  @@unique([userId, connectionId, scope], name: "UserConnectionScopeUnique")
}

model DailyUsage {
  id     Int      @id @default(autoincrement())
  userId String
  date   DateTime
  count  Int      @default(0)

  @@unique([userId, date])
}
